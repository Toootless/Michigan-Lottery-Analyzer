# Environment Configuration for Lottery Analyzer
# Copy this file to .env and fill in your actual API keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Azure OpenAI (Optional - if using Azure instead)
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-12-01-preview
AZURE_OPENAI_DEPLOYMENT=your_deployment_name

# Michigan Lottery Data Sources
MICHIGAN_LOTTERY_BASE_URL=https://www.michiganlottery.com
SCRAPING_DELAY=2  # seconds between requests
MAX_RETRY_ATTEMPTS=3

# Database Configuration
DATABASE_URL=sqlite:///data/lottery_results.db
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily

# Analysis Configuration
DEFAULT_ANALYSIS_DAYS=365
MINIMUM_SAMPLE_SIZE=100
PREDICTION_CONFIDENCE_THRESHOLD=0.75

# API Configuration
API_HOST=localhost
API_PORT=8000
API_DEBUG=false
RATE_LIMIT_PER_MINUTE=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/lottery_analyzer.log
ENABLE_FILE_LOGGING=true

# Visualization Settings
DEFAULT_CHART_THEME=plotly_white
MAX_CHART_DATA_POINTS=1000
CHART_WIDTH=800
CHART_HEIGHT=600

# Machine Learning Settings
MODEL_CACHE_ENABLED=true
MODEL_CACHE_DIR=data/models/
TRAINING_VALIDATION_SPLIT=0.8
RANDOM_SEED=42

# Web Scraping Settings
USER_AGENT=LotteryAnalyzer/1.0 (Educational Research)
SELENIUM_HEADLESS=true
SELENIUM_TIMEOUT=30
JAVASCRIPT_ENABLED=true

# Security Settings
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501
SESSION_SECRET_KEY=your_secret_key_here

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL=3600  # 1 hour
MAX_WORKERS=4
ASYNC_ENABLED=true